<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="185dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415"
        android:id="@+id/constraintLayout6">

        <LinearLayout
            android:id="@+id/node1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:alpha="0.9"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/node2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:alpha="0.9"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/node3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:alpha="0.9"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/node4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:alpha="0.9"
            android:background="@drawable/circle"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </LinearLayout>



        <LinearLayout
            android:id="@+id/node5"
            android:layout_width="15dp"
            android:alpha="0.9"
            android:layout_height="15dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/node6"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle"
            android:alpha="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/node7"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:alpha="0.9"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/node8"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:alpha="0.9"
            app:layout_constraintVertical_bias="0.0">

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="124dp"
            android:layout_height="180dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/summary"
                android:layout_width="0dp"
                android:layout_height="132dp"
                android:background="#e1bee7"
                android:fontFamily="sans-serif-condensed"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:textColor="@android:color/background_light"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tapForMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="8dp"
                android:alpha="0.5"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="Tap for more"
                android:textSize="8sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.733" />

            <TextView
                android:id="@+id/author"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:background="#e1bee7"

                android:fontFamily="sans-serif-condensed"
                android:padding="6dp"
                android:paddingBottom="6dp"
                android:paddingEnd="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingStart="6dp"
                android:paddingTop="6dp"
                android:textColor="@android:color/background_light"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.88" />
        </android.support.constraint.ConstraintLayout>

        <GridLayout

            android:id="@+id/widgetContainer"
            android:layout_width="43dp"
            android:layout_height="162dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:verticalSpacing="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageButton
                android:id="@+id/upVote"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginBottom="2dp"
                android:layout_row="0"
                android:background="@drawable/ic_thumbs_up_pink"
                android:gravity="left"
                android:onClick="upVoteOnClick"
                android:scaleType="fitXY" />
            />

            <TextView
                android:id="@+id/totalVote"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:background="#e1bee7"

                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/downVote"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginTop="2dp"
                android:layout_row="2"

                android:gravity="left"
                android:onClick="downVoteOnClick"
                android:scaleType="fitXY" />
            />

            <ImageButton
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginTop="2dp"
                android:layout_row="3"

                android:gravity="center"
                android:onClick="commentsOnClick"
                android:scaleType="fitXY" />
            />

            <ImageButton
                android:id="@+id/profileBadge"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginTop="2dp"
                android:layout_row="4"
                android:background="@drawable/ic_user_profile_pink"
                android:gravity="center"
                android:scaleType="fitXY" />
            />

        </GridLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>