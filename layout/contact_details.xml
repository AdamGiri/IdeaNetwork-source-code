<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">


    <TextView
        android:id="@+id/phoneSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/telephone"
        android:layout_alignBottom="@+id/telephone"
        android:layout_alignLeft="@+id/skypeSave"
        android:layout_alignStart="@+id/skypeSave"
        android:background="@drawable/ic_save"
        android:elevation="5dp"
        android:onClick="phoneSaveOnClick"
        android:textColor="@android:color/holo_blue_dark"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="99dp" />

    <EditText
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/skype"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/teleTitle"
        android:layout_toRightOf="@+id/teleTitle"
        android:background="@color/teal100"
        android:elevation="3dp"
        android:ems="10"
        android:gravity="start"
        android:hint="Telephone Number"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingLeft="4dp"
        android:paddingTop="10dp"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="68dp" />

    <TextView
        android:id="@+id/teleTitle"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_alignBaseline="@+id/telephone"
        android:layout_alignBottom="@+id/telephone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_smartphone_call"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="68dp" />

    <TextView
        android:id="@+id/skypeSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/skype"
        android:layout_alignBottom="@+id/skype"
        android:layout_alignLeft="@+id/emailSave"

        android:layout_alignStart="@+id/emailSave"
        android:background="@drawable/ic_save"
        android:elevation="5dp"
        android:onClick="skypeSaveOnClick"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/skype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/telephone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/telephone"
        android:layout_below="@+id/email"

        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/skypeTitle"
        android:background="@color/teal100"
        android:elevation="3dp"
        android:ems="10"
        android:gravity="start"
        android:hint="Skype"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingLeft="4dp"
        android:paddingTop="10dp"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="131dp" />

    <TextView
        android:id="@+id/skypeTitle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBaseline="@+id/skype"
        android:layout_alignBottom="@+id/skype"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_skype"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="131dp" />

    <TextView
        android:id="@+id/emailSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_save"
        android:elevation="5dp"
        android:onClick="emailSaveOnClick"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="131dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/teleTitle"

        android:layout_toRightOf="@+id/teleTitle"
        android:background="@color/teal100"
        android:elevation="3dp"
        android:ems="10"
        android:gravity="start"
        android:hint="youremail@example.com"

        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_alignBottom="@+id/emailSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:background="@drawable/ic_email"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/telephone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/imageView8"
        android:layout_toRightOf="@+id/imageView8"

        android:background="@color/teal100"
        android:elevation="3dp"
        android:ems="10"
        android:gravity="start"
        android:hint="Facebook"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="99dp" />

    <EditText
        android:id="@+id/linkedIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/facebook"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/imageView8"
        android:layout_toRightOf="@+id/imageView8"
        android:background="@color/teal100"
        android:elevation="3dp"
        android:ems="10"
        android:gravity="start"
        android:hint="LinkedIn"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="99dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_alignBottom="@+id/facebookSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp"
        app:srcCompat="@drawable/ic_facebook" />

    <ImageView
        android:id="@+id/facebookSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/facebook"
        android:layout_alignLeft="@+id/phoneSave"
        android:layout_alignStart="@+id/phoneSave"
        android:layout_marginBottom="2dp"
        android:elevation="5dp"
        android:onClick="fbSaveOnClick"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_save" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/linkedIn"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_alignRight="@+id/imageView8"
        android:layout_below="@+id/imageView8"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/ic_linked_in_square_button" />

    <ImageView
        android:id="@+id/linkedInSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linkedIn"
        android:layout_alignEnd="@+id/facebookSave"
        android:layout_alignRight="@+id/facebookSave"
        android:layout_marginBottom="2dp"
        android:elevation="5dp"
        android:onClick="linkedInSaveOnClick"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_save" />


</RelativeLayout>