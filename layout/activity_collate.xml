<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.parse.ideanetwork.CollateActivity">

    <TextView
        android:id="@+id/noListMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:visibility="invisible"
        android:text="There are no top ideas to be shown." />

    <TextView
        android:id="@+id/listTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teallight"
        android:elevation="3dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="Top  Ideas from: "
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/listViewCollate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listTitle"
        android:layout_alignStart="@+id/listTitle"
        android:layout_alignTop="@+id/listTitle"
        android:layout_marginTop="55dp"
        android:background="@color/grey"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ImageView
        android:id="@+id/saveList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_save"
        android:onClick="saveList"
        app:elevation="24dp" />


</RelativeLayout>
