<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:background="@color/tipbackground"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:elevation="10dp">



    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingLeft="2dp"
        app:srcCompat="@drawable/ic_push_pin"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tipInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="initial tip message"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView13"
        android:layout_toEndOf="@+id/imageView13" />

    <ImageView
        android:id="@+id/tipPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tipInfo1"
        android:background="@drawable/ic_add_user"
        android:paddingBottom="2dp" />

    <TextView
        android:id="@+id/tipInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tipInfo1"
        android:layout_alignBottom="@+id/tipInfo1"
        android:layout_toRightOf="@id/tipPic"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="initial tip message"
        android:textSize="10sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cancelTip"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tipInfo2"
        app:srcCompat="@android:drawable/ic_delete" />



</RelativeLayout>